<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - YOUR_SITE_NAME</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <style>
        .hover-text-danger:hover {
            color: #ef4444 !important;
        }
        .notification-item.unread {
            background: rgba(99, 102, 241, 0.03);
        }
    </style>
</head>
<body class="mb-0">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book-open"></i> YOUR_SITE_NAME
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Series" asp-action="Index">Series</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Changelog">Changelog</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            @if ((User.FindFirst("IsAdmin")?.Value == "True") || (User.FindFirst("IsSubAdmin")?.Value == "True"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="fas fa-cog me-1"></i>Admin
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown" id="notificationDropdownContainer">
                                <a class="nav-link position-relative d-flex align-items-center justify-content-center" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 0.5rem; width: 40px; height: 40px;">
                                    <i class="fas fa-bell" style="font-size: 1.2rem;"></i>
                                    <span id="notificationBadge" class="position-absolute badge rounded-pill bg-danger d-none" style="font-size: 0.55rem; padding: 0.25em 0.45em; top: 2px; right: 2px;">
                                        0
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end p-0 shadow-lg border-0" aria-labelledby="notificationDropdown" style="width: 350px; background: var(--bg-secondary); max-height: 500px; overflow-y: auto; border: 2px solid rgba(99, 102, 241, 0.5) !important; box-shadow: 0 0 25px rgba(99, 102, 241, 0.3), 0 10px 25px -5px rgba(0, 0, 0, 0.5) !important;">
                                    <li class="p-3 border-bottom d-flex justify-content-between align-items-center" style="border-color: var(--border-color) !important;">
                    <h6 class="mb-0 text-white fw-bold">Notifications</h6>
                    <button class="btn btn-sm btn-link text-decoration-none p-0" id="markAllReadBtn" style="color: var(--primary-light); font-size: 0.8rem; font-weight: 500;">Mark all as read</button>
                </li>
                <li class="p-0 border-bottom" style="border-color: var(--border-color) !important;">
                    <div class="d-flex w-100">
                        <button class="btn btn-sm flex-grow-1 text-white rounded-0 py-2 notif-tab active-notif-tab" id="tabSeries" onclick="switchNotifTab('series', event)" onmouseover="if(currentNotifTab!=='series') this.style.background='rgba(99, 102, 241, 0.1)'" onmouseout="this.style.background='transparent'" style="font-size: 0.8rem; border: none; background: transparent; transition: all 0.3s ease; border-bottom: 2px solid var(--primary-color); outline: none !important; box-shadow: none !important;">Series</button>
                        <button class="btn btn-sm flex-grow-1 text-white rounded-0 py-2 notif-tab" id="tabCommunity" onclick="switchNotifTab('community', event)" onmouseover="if(currentNotifTab!=='community') this.style.background='rgba(99, 102, 241, 0.1)'" onmouseout="this.style.background='transparent'" style="font-size: 0.8rem; border: none; background: transparent; transition: all 0.3s ease; border-bottom: 2px solid transparent; outline: none !important; box-shadow: none !important;">Community</button>
                        <button class="btn btn-sm flex-grow-1 text-white rounded-0 py-2 notif-tab" id="tabSystem" onclick="switchNotifTab('system', event)" onmouseover="if(currentNotifTab!=='system') this.style.background='rgba(99, 102, 241, 0.1)'" onmouseout="this.style.background='transparent'" style="font-size: 0.8rem; border: none; background: transparent; transition: all 0.3s ease; border-bottom: 2px solid transparent; outline: none !important; box-shadow: none !important;">System</button>
                    </div>
                </li>
                <div id="notificationList">
                    <li class="p-4 text-center text-white">No notifications yet.</li>
                </div>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>
                                    <span>@User.Identity.Name</span>
                                    <span id="navUserLevel" class="badge rounded-pill bg-primary" style="font-size: 0.7rem; display: none;">Lvl 1</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" style="background: var(--bg-secondary); border-color: var(--border-color);">
                                    <li>
                                        <a class="dropdown-item" style="color: var(--text-primary);" asp-area="" asp-controller="Auth" asp-action="Profile">
                                            <i class="fas fa-id-card me-2"></i>My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" style="color: var(--text-primary);" asp-area="" asp-controller="Series" asp-action="Bookmarks">
                                            <i class="fas fa-bookmark me-2"></i>My Bookmarks
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" style="color: var(--text-primary);" asp-area="" asp-controller="Auth" asp-action="ChangePassword">
                                            <i class="fas fa-key me-2"></i>Change Password
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" style="display: inline;">
                                            <button type="submit" class="dropdown-item" style="color: var(--text-primary); border: none; background: none; cursor: pointer; padding: 0.5rem 1rem; width: 100%; text-align: left;">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary ms-lg-3 px-4 text-white" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-5" style="background: var(--bg-secondary); border-top: 1px solid var(--border-color);">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-4">
                    <h5 class="text-white fw-bold mb-3">YOUR_SITE_NAME</h5>
                    <p class="text-white-50 mb-0">The best place to read your favorite manga online for free.</p>
                </div>
                <div class="col-lg-2 col-6">
                    <h6 class="text-white fw-bold mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white-50 text-decoration-none hover-text-danger">Home</a></li>
                        <li><a href="/Series" class="text-white-50 text-decoration-none hover-text-danger">Series</a></li>
                        <li><a href="/Home/Changelog" class="text-white-50 text-decoration-none hover-text-danger">Changelog</a></li>
                    </ul>
                </div>
                <div class="col-lg-2 col-6">
                    <h6 class="text-white fw-bold mb-3">Community</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-white-50 text-decoration-none hover-text-danger">Discord</a></li>
                        <li><a href="#" class="text-white-50 text-decoration-none hover-text-danger">Twitter</a></li>
                    </ul>
                </div>
                <div class="col-lg-4">
                    <h6 class="text-white fw-bold mb-3">About</h6>
                    <p class="text-white-50 small mb-0">YOUR_SITE_NAME is a community project built for manga enthusiasts. We do not host any content on our servers.</p>
                </div>
            </div>
            <hr class="my-4" style="border-color: var(--border-color);">
            <div class="text-center text-white-50 small">
                &copy; @DateTime.Now.Year YOUR_SITE_NAME. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Notification system
        let currentNotifTab = 'series';
        
        async function switchNotifTab(tab, event) {
            if (event) event.stopPropagation();
            currentNotifTab = tab;
            
            // Update UI
            document.querySelectorAll('.notif-tab').forEach(t => {
                t.classList.remove('active-notif-tab');
                t.style.borderBottom = '2px solid transparent';
            });
            
            const activeBtn = document.getElementById('tab' + tab.charAt(0).toUpperCase() + tab.slice(1));
            activeBtn.classList.add('active-notif-tab');
            activeBtn.style.borderBottom = '2px solid var(--primary-color)';
            
            await loadNotifications();
        }

        async function loadNotifications() {
            try {
                const response = await fetch(`/Auth/GetNotifications?type=${currentNotifTab}`);
                const data = await response.json();
                const list = document.getElementById('notificationList');
                const badge = document.getElementById('notificationBadge');
                
                if (data.unreadCount > 0) {
                    badge.textContent = data.unreadCount;
                    badge.classList.remove('d-none');
                } else {
                    badge.classList.add('d-none');
                }
                
                if (data.notifications.length === 0) {
                    list.innerHTML = '<li class="p-4 text-center text-white">No notifications yet.</li>';
                    return;
                }
                
                list.innerHTML = data.notifications.map(n => `
                    <li class="notification-item p-3 border-bottom ${n.isRead ? '' : 'unread'}" style="border-color: var(--border-color) !important; cursor: pointer;" onclick="markAsRead(${n.id}, '${n.link}')">
                        <div class="d-flex align-items-start gap-3">
                            <div class="rounded-circle p-2" style="background: rgba(99, 102, 241, 0.1); color: var(--primary-light);">
                                <i class="fas ${n.type === 'SeriesUpdate' ? 'fa-book' : n.type === 'Community' ? 'fa-users' : 'fa-info-circle'}"></i>
                            </div>
                            <div class="flex-grow-1">
                                <div class="text-white small mb-1">${n.message}</div>
                                <div class="text-white-50" style="font-size: 0.7rem;">${n.timeAgo}</div>
                            </div>
                            ${n.isRead ? '' : '<div class="rounded-circle bg-primary" style="width: 8px; height: 8px; margin-top: 5px;"></div>'}
                        </div>
                    </li>
                `).join('');
            } catch (err) {
                console.error('Error loading notifications:', err);
            }
        }

        async function markAsRead(id, link) {
            try {
                await fetch(`/Auth/MarkNotificationRead/${id}`, { method: 'POST' });
                if (link) window.location.href = link;
                else loadNotifications();
            } catch (err) {
                console.error('Error marking notification as read:', err);
            }
        }

        $(document).ready(function() {
            if ($('#notificationDropdown').length) {
                loadNotifications();
                setInterval(loadNotifications, 60000); // Refresh every minute
                
                $('#markAllReadBtn').on('click', async function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    try {
                        await fetch('/Auth/MarkAllNotificationsRead', { method: 'POST' });
                        loadNotifications();
                    } catch (err) {
                        console.error('Error marking all notifications as read:', err);
                    }
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
