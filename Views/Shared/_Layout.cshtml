<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DFlowScans</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <style>
        .hover-text-danger:hover {
            color: #ef4444 !important;
        }
        .notification-item.unread {
            background: rgba(99, 102, 241, 0.03);
        }
    </style>
</head>
<body class="mb-0">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book-open"></i> DFlowScans
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Series" asp-action="Index">Series</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Changelog">Changelog</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            @if ((User.FindFirst("IsAdmin")?.Value == "True") || (User.FindFirst("IsSubAdmin")?.Value == "True"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">
                                        <i class="fas fa-cog me-1"></i>Admin
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown" id="notificationDropdownContainer">
                                <a class="nav-link position-relative d-flex align-items-center justify-content-center" href="#" id="notificationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 0.5rem; width: 40px; height: 40px;">
                                    <i class="fas fa-bell" style="font-size: 1.2rem;"></i>
                                    <span id="notificationBadge" class="position-absolute badge rounded-pill bg-danger d-none" style="font-size: 0.55rem; padding: 0.25em 0.45em; top: 2px; right: 2px;">
                                        0
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end p-0 shadow-lg border-0" aria-labelledby="notificationDropdown" style="width: 350px; background: var(--bg-secondary); max-height: 500px; overflow-y: auto; border: 2px solid rgba(99, 102, 241, 0.5) !important; box-shadow: 0 0 25px rgba(99, 102, 241, 0.3), 0 10px 25px -5px rgba(0, 0, 0, 0.5) !important;">
                                    <li class="p-3 border-bottom d-flex justify-content-between align-items-center" style="border-color: var(--border-color) !important;">
                    <h6 class="mb-0 text-white fw-bold">Notifications</h6>
                    <button class="btn btn-sm btn-link text-decoration-none p-0" id="markAllReadBtn" style="color: var(--primary-light); font-size: 0.8rem; font-weight: 500;">Mark all as read</button>
                </li>
                <li class="p-0 border-bottom" style="border-color: var(--border-color) !important;">
                    <div class="d-flex w-100">
                        <button class="btn btn-sm flex-grow-1 text-white rounded-0 py-2 notif-tab active-notif-tab" id="tabSeries" onclick="switchNotifTab('series', event)" onmouseover="if(currentNotifTab!=='series') this.style.background='rgba(99, 102, 241, 0.1)'" onmouseout="this.style.background='transparent'" style="font-size: 0.8rem; border: none; background: transparent; transition: all 0.3s ease; border-bottom: 2px solid var(--primary-color); outline: none !important; box-shadow: none !important;">Series</button>
                        <button class="btn btn-sm flex-grow-1 text-white rounded-0 py-2 notif-tab" id="tabCommunity" onclick="switchNotifTab('community', event)" onmouseover="if(currentNotifTab!=='community') this.style.background='rgba(99, 102, 241, 0.1)'" onmouseout="this.style.background='transparent'" style="font-size: 0.8rem; border: none; background: transparent; transition: all 0.3s ease; border-bottom: 2px solid transparent; outline: none !important; box-shadow: none !important;">Community</button>
                        <button class="btn btn-sm flex-grow-1 text-white rounded-0 py-2 notif-tab" id="tabSystem" onclick="switchNotifTab('system', event)" onmouseover="if(currentNotifTab!=='system') this.style.background='rgba(99, 102, 241, 0.1)'" onmouseout="this.style.background='transparent'" style="font-size: 0.8rem; border: none; background: transparent; transition: all 0.3s ease; border-bottom: 2px solid transparent; outline: none !important; box-shadow: none !important;">System</button>
                    </div>
                </li>
                <div id="notificationList">
                    <li class="p-4 text-center text-white">No notifications yet.</li>
                </div>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>
                                    <span>@User.Identity.Name</span>
                                    <span id="navUserLevel" class="badge rounded-pill bg-primary" style="font-size: 0.7rem; display: none;">Lvl 1</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" style="background: var(--bg-secondary); border-color: var(--border-color);">
                                    <li>
                                        <a class="dropdown-item" style="color: var(--text-primary);" asp-area="" asp-controller="Auth" asp-action="Profile">
                                            <i class="fas fa-id-card me-2"></i>My Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" style="color: var(--text-primary);" asp-area="" asp-controller="Series" asp-action="Bookmarks">
                                            <i class="fas fa-bookmark me-2"></i>My Bookmarks
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" style="color: var(--text-primary);" asp-area="" asp-controller="Auth" asp-action="ChangePassword">
                                            <i class="fas fa-key me-2"></i>Change Password
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider" style="border-color: var(--border-color);"></li>
                                    <li>
                                        <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" style="display: inline;">
                                            <button type="submit" class="dropdown-item" style="color: var(--text-primary); border: none; background: none; cursor: pointer; padding: 0.5rem 1rem; width: 100%; text-align: left;">
                                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <footer class="footer mt-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h6 class="mb-3">About DFlowScans</h6>
                    <p class="text-white">A small manga focused scanlation group.</p>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="mb-3">Quick Links</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Series" asp-action="Index">Series</a></li>
                        <li><a asp-controller="Home" asp-action="Changelog">Changelog</a></li>
                        <li><a href="https://discord.gg/tyRD6Nn6Fr" target="_blank">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 class="mb-3">Follow Us</h6>
                    <div class="social-links">
                        <a href="https://discord.gg/tyRD6Nn6Fr" target="_blank" title="Join our Discord"><i class="fab fa-discord"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary">
            <div class="text-center text-muted">
                <p class="text-white">&copy; 2025 DFlowScans. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <script>
            async function updateNavLevel() {
                try {
                    const resp = await fetch('@Url.Action("GetUserInfo", "Auth")');
                    const data = await resp.json();
                    if (data.success) {
                        const levelEl = document.getElementById('navUserLevel');
                        if (levelEl) {
                            levelEl.textContent = 'Lvl ' + data.level;
                            levelEl.style.display = 'inline-block';
                            levelEl.title = `${data.xp} / ${data.xpNeeded} XP`;
                        }
                    }
                } catch (e) { console.error("Failed to fetch user level", e); }
            }
            updateNavLevel();

            let currentNotifTab = 'series';

            function switchNotifTab(tab, event) {
                if (event) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                currentNotifTab = tab;
                
                const tabSeries = document.getElementById('tabSeries');
                const tabCommunity = document.getElementById('tabCommunity');
                const tabSystem = document.getElementById('tabSystem');
                
                [tabSeries, tabCommunity, tabSystem].forEach(el => {
                    if (el) {
                        el.style.borderBottom = '2px solid transparent';
                        el.style.color = 'var(--text-muted)';
                    }
                });
                
                const activeTab = document.getElementById('tab' + tab.charAt(0).toUpperCase() + tab.slice(1));
                if (activeTab) {
                    activeTab.style.borderBottom = '2px solid var(--primary-color)';
                    activeTab.style.color = 'var(--text-primary)';
                }
                
                loadNotifications();
            }

            async function loadNotifications() {
                try {
                    const resp = await fetch('@Url.Action("GetNotifications", "Notification")');
                    const data = await resp.json();
                    if (data.success) {
                        const badge = document.getElementById('notificationBadge');
                        const list = document.getElementById('notificationList');
                        
                        if (data.unreadCount > 0) {
                            badge.textContent = data.unreadCount > 99 ? '99+' : data.unreadCount;
                            badge.classList.remove('d-none');
                        } else {
                            badge.classList.add('d-none');
                        }

                        // Filter based on tab
                        // NotificationType: Comic = 0, Community = 1, System = 2, Reward = 3
                        const filtered = (data.notifications || []).filter(n => {
                            if (currentNotifTab === 'series') return n.type === 0;
                            if (currentNotifTab === 'community') return n.type === 1;
                            if (currentNotifTab === 'system') return n.type === 2 || n.type === 3;
                            return false;
                        });

                        if (filtered.length > 0) {
                            list.innerHTML = filtered.map(n => {
                                const date = new Date(n.createdAt).toLocaleDateString();
                                const url = n.relatedChapterId ? `/Series/ReadChapter/${n.relatedChapterId}` : '#';
                                const isUnread = !n.isRead;
                                return `
                                    <li class="notification-item p-3 border-bottom d-flex align-items-start gap-3 ${isUnread ? 'unread' : ''}" style="border-color: var(--border-color) !important; cursor: pointer; transition: all 0.2s ease;" onclick="location.href='${url}'" onmouseover="this.style.background='rgba(99, 102, 241, 0.05)'" onmouseout="this.style.background='transparent'">
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <p class="mb-1 text-white small" style="font-weight: ${isUnread ? '600' : '400'};">${n.message}</p>
                                                <div class="d-flex gap-2">
                                                    ${isUnread ? `<button class="btn btn-sm p-0 mark-read-btn" onclick="event.stopPropagation(); markAsRead(${n.id})" title="Mark as read"><i class="fas fa-circle text-primary" style="font-size: 0.5rem;"></i></button>` : ''}
                                                    <button class="btn btn-sm p-0 text-white-50 hover-text-danger" onclick="event.stopPropagation(); deleteNotification(${n.id})" title="Delete"><i class="fas fa-trash-alt" style="font-size: 0.8rem;"></i></button>
                                                </div>
                                            </div>
                                            <span class="text-muted" style="font-size: 0.7rem;">${date}</span>
                                        </div>
                                    </li>
                                `;
                            }).join('');
                        } else {
                            list.innerHTML = `<li class="p-4 text-center text-white" style="font-size: 0.9rem; opacity: 0.8;">No ${currentNotifTab} notifications yet.</li>`;
                        }
                    }
                } catch (e) { console.error("Failed to load notifications", e); }
            }

            window.markAsRead = async function(id) {
                try {
                    const resp = await fetch(`/Notification/MarkAsRead/${id}`, { method: 'POST' });
                    const data = await resp.json();
                    if (data.success) {
                        loadNotifications();
                    }
                } catch (e) { console.error("Failed to mark notification as read", e); }
            }

            window.deleteNotification = async function(id) {
                try {
                    const resp = await fetch(`/Notification/Delete/${id}`, { method: 'POST' });
                    const data = await resp.json();
                    if (data.success) {
                        loadNotifications();
                    }
                } catch (e) { console.error("Failed to delete notification", e); }
            }

            document.getElementById('markAllReadBtn').addEventListener('click', async (e) => {
                e.stopPropagation();
                try {
                    const resp = await fetch(`@Url.Action("MarkAllAsRead", "Notification")?tab=${currentNotifTab}`, { method: 'POST' });
                    const data = await resp.json();
                    if (data.success) {
                        loadNotifications();
                    }
                } catch (e) { console.error("Failed to mark all as read", e); }
            });

            loadNotifications();
            // Refresh every 2 minutes
            setInterval(loadNotifications, 120000);
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
