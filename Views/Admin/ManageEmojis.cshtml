@model List<MangaReader.Controllers.EmojiModel>
@{
    ViewData["Title"] = "Manage Emojis";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="section-header mb-4">
        <h2>Manage Custom Emojis</h2>
        <div class="section-header-divider"></div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-7">
            <div class="card bg-secondary text-white border-secondary mb-4">
                <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Emoji Configuration (JSON)</h5>
                    <button type="button" class="btn btn-outline-light btn-sm" onclick="formatJson()">Format JSON</button>
                </div>
                <div class="card-body">
                    <form asp-action="ManageEmojis" method="post" id="emojiForm">
                        <textarea name="emojisJson" id="emojisJson" class="form-control bg-dark text-white font-monospace" rows="20">@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model, new System.Text.Json.JsonSerializerOptions { WriteIndented = true }))</textarea>
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary ms-2">Back to Dashboard</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card bg-secondary text-white border-secondary">
                <div class="card-header border-secondary">
                    <h5 class="mb-0">Preview & Instructions</h5>
                </div>
                <div class="card-body">
                    <h6>Instructions:</h6>
                    <ul class="small mb-4" style="color: #cbd5e1;">
                        <li>Each emoji is an object with <code>code</code>, <code>url</code>, and <code>size</code>.</li>
                        <li><strong style="color: #f1f5f9;">Code:</strong> The text that will be replaced (e.g., <code>:happy:</code>).</li>
                        <li><strong style="color: #f1f5f9;">URL:</strong> Link to the image file (recommended size: 24x24 or 32x32 px).</li>
                        <li><strong style="color: #f1f5f9;">Size:</strong> Display size in pixels (default 24).</li>
                    </ul>

                    <h6>Current Emojis:</h6>
                    <div id="emojiPreview" class="d-flex flex-wrap gap-3 mt-3">
                        @foreach (var emoji in Model)
                        {
                            <div class="text-center p-2 border border-secondary rounded bg-dark" style="min-width: 80px;">
                                <img src="@emoji.url" alt="@emoji.code" style="width: @(emoji.size)px; height: @(emoji.size)px;" class="mb-2" />
                                <div class="small" style="color: #94a3b8;"><code>@emoji.code</code></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function formatJson() {
            const textarea = document.getElementById('emojisJson');
            try {
                const obj = JSON.parse(textarea.value);
                textarea.value = JSON.stringify(obj, null, 2);
            } catch (e) {
                alert('Invalid JSON format. Please fix it before formatting.');
            }
        }

        document.getElementById('emojisJson').addEventListener('input', function() {
            const preview = document.getElementById('emojiPreview');
            try {
                const data = JSON.parse(this.value);
                let html = '';
                data.forEach(emoji => {
                    html += `
                        <div class="text-center p-2 border border-secondary rounded bg-dark" style="min-width: 80px;">
                            <img src="${emoji.url}" alt="${emoji.code}" style="width: ${emoji.size}px; height: ${emoji.size}px;" class="mb-2" />
                            <div class="small" style="color: #94a3b8;"><code>${emoji.code}</code></div>
                        </div>`;
                });
                preview.innerHTML = html;
            } catch (e) {
                // Invalid JSON, don't update preview
            }
        });
    </script>
}

<style>
    .bg-secondary { background-color: #1e293b !important; }
    .bg-dark { background-color: #0f172a !important; }
    .border-secondary { border-color: #334155 !important; }
    .font-monospace { font-family: SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace !important; }
</style>