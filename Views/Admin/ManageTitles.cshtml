@model List<MangaReader.Models.UserTitle>
@{
    ViewData["Title"] = "Manage User Titles";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="section-header mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h2>Manage User Titles</h2>
            <div class="section-header-divider"></div>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="fas fa-plus me-2"></i>Add Title
        </button>
    </div>

    <div class="alert alert-info border-info bg-dark shadow-sm mb-4">
        <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Title Management Guide</h5>
        <div class="row">
            <div class="col-md-6">
                <ul class="mb-2">
                    <li><strong>Title Name:</strong> Keep it short (max 20 chars) for best display (e.g. "Solo Leveler").</li>
                    <li><strong>Color (Hex):</strong> Use valid hex codes (e.g. <code>#FFD700</code> for Gold). This color will be used for the title text and badge border.</li>
                    <li><strong>Level Requirement:</strong> The minimum level a user must reach to unlock and equip this title.</li>
                </ul>
            </div>
            <div class="col-md-6 border-start border-secondary">
                <ul class="mb-2">
                    <li><strong>Visibility:</strong> Titles appear as stylized badges directly under the user's profile picture in the comment section.</li>
                    <li><strong>Equipping:</strong> Users can choose their active title from their Profile page once they meet the level requirement.</li>
                    <li><strong>Style Tip:</strong> Use bright, high-contrast colors to make legendary titles stand out against the dark theme.</li>
                </ul>
            </div>
        </div>
        <div class="mt-2 pt-2 border-top border-secondary small text-white-50">
            <i class="fas fa-lightbulb me-1 text-warning"></i> <strong>Pro Tip:</strong> You can use <code>#00000000</code> (fully transparent) for the color if you want a subtle look, though it's not recommended for readability.
        </div>
    </div>

    <div class="row">
        @foreach (var title in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card bg-secondary text-white border-secondary h-100 shadow-sm">
                    <div class="card-body text-center d-flex flex-column">
                        <div class="title-preview mb-3 py-2 px-3 rounded" style="background: rgba(0,0,0,0.3); border: 1px solid @title.Color; color: @title.Color; font-weight: bold; display: inline-block; align-self: center;">
                            @title.Name
                        </div>
                        <h5 class="mb-1">@title.Name</h5>
                        <div class="d-flex align-items-center justify-content-center gap-2 mb-3">
                            <span class="badge bg-primary">Level @title.LevelRequirement</span>
                            @if (title.IsLocked)
                            {
                                <span class="badge bg-danger"><i class="fas fa-lock me-1"></i>Locked</span>
                            }
                        </div>
                        
                        <div class="d-flex justify-content-center gap-2 mt-auto">
                            <button class="btn btn-sm btn-outline-light" 
                                    data-title='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(title))'
                                    onclick="editTitle(this)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <form asp-action="DeleteTitle" method="post" onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="id" value="@title.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form asp-action="CreateTitle" method="post">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Add New Title</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title Name</label>
                        <input type="text" name="Name" class="form-control bg-secondary text-white border-secondary" placeholder="e.g. Master Reader" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Color (Hex)</label>
                        <input type="text" name="Color" class="form-control bg-secondary text-white border-secondary" value="#ffffff" placeholder="#ffffff" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Level Requirement</label>
                        <input type="number" name="LevelRequirement" class="form-control bg-secondary text-white border-secondary" value="1" min="1" required />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="IsLocked" class="form-check-input" id="isLockedCreate" value="true" />
                        <label class="form-check-label" for="isLockedCreate">Is Locked (Manual Award Only)?</label>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form asp-action="EditTitle" method="post">
                <input type="hidden" name="Id" id="editId" />
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Edit Title</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title Name</label>
                        <input type="text" name="Name" id="editName" class="form-control bg-secondary text-white border-secondary" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Color (Hex)</label>
                        <input type="text" name="Color" id="editColor" class="form-control bg-secondary text-white border-secondary" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Level Requirement</label>
                        <input type="number" name="LevelRequirement" id="editLevelRequirement" class="form-control bg-secondary text-white border-secondary" min="1" required />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="IsLocked" class="form-check-input" id="editIsLocked" value="true" />
                        <label class="form-check-label" for="editIsLocked">Is Locked (Manual Award Only)?</label>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editTitle(btn) {
            const title = JSON.parse(btn.getAttribute('data-title'));
            
            // Handle both PascalCase and camelCase
            document.getElementById('editId').value = title.Id || title.id;
            document.getElementById('editName').value = title.Name || title.name;
            document.getElementById('editColor').value = title.Color || title.color;
            document.getElementById('editLevelRequirement').value = title.LevelRequirement || title.levelRequirement;
            document.getElementById('editIsLocked').checked = title.IsLocked || title.isLocked || false;
            
            new bootstrap.Modal(document.getElementById('editModal')).show();
        }
    </script>
}
