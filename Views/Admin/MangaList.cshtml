@model IEnumerable<MangaReader.Models.Manga>

@{
    ViewData["Title"] = "Manage Manga";
}

<div class="container-fluid">
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <div class="section-header">
                <h2>Manage Manga</h2>
                <div class="section-header-divider"></div>
            </div>
        </div>
        <div class="col-md-4" style="text-align: right;">
            <a asp-action="CreateManga" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Add New Manga
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Dashboard
            </a>
        </div>
    </div>

    <!-- Search -->
    <div class="mb-4">
        <form asp-action="MangaList" method="get" class="d-flex gap-2">
            <input type="text" name="search" class="form-control" placeholder="Search manga..." value="@ViewBag.Search" 
                   style="background: var(--bg-secondary); border-color: var(--border-color); color: var(--text-primary);">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>

    <!-- Manga Table -->
    <div style="background: var(--bg-secondary); border: 1px solid var(--border-color); border-radius: 10px; overflow: hidden;">
        <div style="overflow-x: auto;">
            <table class="table" style="margin: 0; color: var(--text-primary);">
                <thead style="background: var(--bg-tertiary);">
                    <tr>
                        <th style="padding: 1rem; border-bottom: 1px solid var(--border-color);">Title</th>
                        <th style="padding: 1rem; border-bottom: 1px solid var(--border-color);">Author</th>
                        <th style="padding: 1rem; border-bottom: 1px solid var(--border-color);">Status</th>
                        <th style="padding: 1rem; border-bottom: 1px solid var(--border-color);">Chapters</th>
                        <th style="padding: 1rem; border-bottom: 1px solid var(--border-color);">Rating</th>
                        <th style="padding: 1rem; border-bottom: 1px solid var(--border-color);">Featured</th>
                        <th style="padding: 1rem; border-bottom: 1px solid var(--border-color);">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var manga in Model)
                        {
                            <tr style="border-bottom: 1px solid var(--border-color);">
                                <td style="padding: 1rem;">
                                    <strong>@manga.Title</strong><br>
                                    <small style="color: var(--text-muted);">@manga.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td style="padding: 1rem;">@(manga.Author ?? "N/A")</td>
                                <td style="padding: 1rem;">
                                    <span style="background: var(--primary-color); color: white; padding: 0.3rem 0.8rem; border-radius: 20px; font-size: 0.85rem;">
                                        @(manga.Status ?? "Unknown")
                                    </span>
                                </td>
                                <td style="padding: 1rem;">@(manga.Chapters?.Count ?? 0)</td>
                                <td style="padding: 1rem;">
                                    <i class="fas fa-star" style="color: var(--accent);"></i> @(manga.Rating ?? 0)/10
                                </td>
                                <td style="padding: 1rem;">
                                    @if (manga.IsFeatured)
                                    {
                                        <span style="color: var(--success); font-weight: 600;">
                                            <i class="fas fa-check-circle"></i> Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="color: var(--text-muted);">
                                            <i class="fas fa-times-circle"></i> No
                                        </span>
                                    }
                                </td>
                                <td style="padding: 1rem;">
                                    <a asp-action="EditManga" asp-route-id="@manga.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="ChapterList" asp-route-mangaId="@manga.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-list"></i> Chapters
                                    </a>
                                    <a asp-action="DeleteManga" asp-route-id="@manga.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" style="padding: 2rem; text-align: center; color: var(--text-muted);">
                                <i class="fas fa-inbox" style="font-size: 2rem; display: block; margin-bottom: 0.5rem;"></i>
                                No manga found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
