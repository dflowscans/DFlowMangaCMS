@model List<MangaReader.Models.PfpDecoration>
@{
    ViewData["Title"] = "Manage PFP Decorations";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="section-header mb-4 d-flex justify-content-between align-items-center">
        <div>
            <h2>Manage PFP Decorations</h2>
            <div class="section-header-divider"></div>
        </div>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="fas fa-plus me-2"></i>Add Decoration
        </button>
    </div>

    <div class="alert alert-info border-info bg-dark shadow-sm mb-4">
        <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i>Decoration Guide</h5>
        <ul class="mb-0">
            <li><strong>Recommended Size:</strong> 256x256 pixels or 512x512 pixels.</li>
            <li><strong>Aspect Ratio:</strong> 1:1 (Square) is required for perfect alignment.</li>
            <li><strong>Format:</strong> Transparent PNG for static decorations, or Transparent GIF/WebP for animated ones.</li>
            <li><strong>Design Tip:</strong> The decoration should be a "ring" or "frame" with transparency in the center to allow the user's PFP to show through.</li>
        </ul>
    </div>

    <div class="row">
        @foreach (var decoration in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card bg-secondary text-white border-secondary h-100 shadow-sm">
                    <div class="card-body text-center position-relative d-flex flex-column">
                        <div class="decoration-preview-container mb-3 mx-auto" style="width: 120px; height: 120px; position: relative; background: #1a1d21; border-radius: 50%; padding: 0; border: 2px solid var(--border-color); overflow: visible;">
                            <!-- Placeholder Avatar -->
                            <img src="https://ui-avatars.com/api/?name=User&background=312e81&color=fff&size=128" alt="Avatar" style="width: 80%; height: 80%; border-radius: 50%; object-fit: cover; position: absolute; top: 10%; left: 10%; z-index: 1;" />
                            <!-- Decoration -->
                            <img src="@decoration.ImageUrl" alt="@decoration.Name" style="position: absolute; top: -5%; left: -5%; width: 110%; height: 110%; pointer-events: none; z-index: 2; object-fit: contain;" onerror="this.src='https://placehold.co/200x200/2a2e35/ef4444?text=Broken+Link'; this.style.opacity='0.8';" />
                        </div>
                        <h5 class="mb-1 text-white">@decoration.Name</h5>
                        <div class="d-flex align-items-center justify-content-center gap-2 mb-3">
                            <span class="badge bg-primary">Level @decoration.LevelRequirement</span>
                            @if (decoration.IsLocked)
                            {
                                <span class="badge bg-danger"><i class="fas fa-lock me-1"></i>Locked</span>
                            }
                            @if (decoration.IsAnimated)
                            {
                                <span class="badge bg-info"><i class="fas fa-sparkles me-1"></i>Animated</span>
                            }
                        </div>
                        
                        <div class="d-flex justify-content-center gap-2 mt-auto">
                            <button class="btn btn-sm btn-outline-light" 
                                    data-decoration='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(decoration))'
                                    onclick="editDecoration(this)">
                                <i class="fas fa-edit"></i>
                            </button>
                            <form asp-action="DeleteDecoration" method="post" onsubmit="return confirm('Are you sure?')">
                                <input type="hidden" name="id" value="@decoration.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form asp-action="CreateDecoration" method="post">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Add New Decoration</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="Name" class="form-control bg-secondary text-white border-secondary" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Image URL</label>
                        <input type="text" name="ImageUrl" class="form-control bg-secondary text-white border-secondary" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Level Requirement</label>
                        <input type="number" name="LevelRequirement" class="form-control bg-secondary text-white border-secondary" value="1" min="1" required />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="IsAnimated" class="form-check-input" id="isAnimatedCreate" value="true" />
                        <label class="form-check-label" for="isAnimatedCreate">Is Animated (GIF)?</label>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="IsLocked" class="form-check-input" id="isLockedCreate" value="true" />
                        <label class="form-check-label" for="isLockedCreate">Is Locked (Manual Award Only)?</label>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form asp-action="EditDecoration" method="post">
                <input type="hidden" name="Id" id="editId" />
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Edit Decoration</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="Name" id="editName" class="form-control bg-secondary text-white border-secondary" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Image URL</label>
                        <input type="text" name="ImageUrl" id="editImageUrl" class="form-control bg-secondary text-white border-secondary" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Level Requirement</label>
                        <input type="number" name="LevelRequirement" id="editLevelRequirement" class="form-control bg-secondary text-white border-secondary" min="1" required />
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="IsAnimated" class="form-check-input" id="editIsAnimated" value="true" />
                        <label class="form-check-label" for="editIsAnimated">Is Animated (GIF)?</label>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" name="IsLocked" class="form-check-input" id="editIsLocked" value="true" />
                        <label class="form-check-label" for="editIsLocked">Is Locked (Manual Award Only)?</label>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editDecoration(btn) {
            const decoration = JSON.parse(btn.getAttribute('data-decoration'));
            
            // Handle both PascalCase and camelCase
            document.getElementById('editId').value = decoration.Id || decoration.id;
            document.getElementById('editName').value = decoration.Name || decoration.name;
            document.getElementById('editImageUrl').value = decoration.ImageUrl || decoration.imageUrl;
            document.getElementById('editLevelRequirement').value = decoration.LevelRequirement || decoration.levelRequirement;
            document.getElementById('editIsAnimated').checked = decoration.IsAnimated || decoration.isAnimated || false;
            document.getElementById('editIsLocked').checked = decoration.IsLocked || decoration.isLocked || false;
            
            new bootstrap.Modal(document.getElementById('editModal')).show();
        }
    </script>
}
